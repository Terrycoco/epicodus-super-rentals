<div class="row">
  <li>
    <div class="col-md-4">
      {{rental.owner}}'s {{rental.type}} in {{rental.city}}
    </div>
      {{#if isImageShowing}}
    <p><img src={{rental.image}} alt={{rental.type}} {{action 'imageHide'}}></p>
      {{else}}
    <div class="col-md-1">
      <button style="border-width: thick;"class="btn-sm btn-success" {{action 'imageShow'}}>Image</button>
    </div>
    {{/if}}

    <div class="col-md-2">
      <button style="border-width: thick;" class="btn-sm btn-danger" {{action 'delete' rental}}>Delete</button>
    </div>
  </li>

</div>
