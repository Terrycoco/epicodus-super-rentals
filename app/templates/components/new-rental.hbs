{{#if addNewRental}}
  <h1>New Rental</h1>
    <div>
      <form>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label for="owner">Owner</label>
              {{input class="form-control" value=owner id="owner"}}
            </div>

            <div class="form-group">
              <label for="type">Type</label>
              {{input class="form-control" value=type id="type"}}
            </div>

            <div class="form-group">
              <label for="city">City</label>
              {{input class="form-control" value=city id="city"}}
            </div>

            <div class="form-group">
              <label for="bedrooms">Number of Bedrooms</label>
              {{input class="form-control" value=bedrooms id="bedrooms"}}
            </div>

            <div class="form-group">
              <label for="image">Image URL</label>
              {{input class="form-control" value=image id="image"}}
            </div>
          </div>
        </div>
        <button style="border-width: thick; background-color:gray; color:white;" {{action 'save1'}}>Save</button>
      </form>
    </div>
  {{else}}
    <button style="border-width: thick; background-color:gray; color:white;" class="btn-sm btn-default" {{action 'rentalFormShow'}}>New Rental</button>
  {{/if}}
